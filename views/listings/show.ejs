<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-10 offset-2">
            <h3>Listing Details</h3>
        </div>
        <div class="card col-8 offset-2 show-card">
            <img src="<%= listing.Image %>" class="card-img-top show-img" style="height: 20rem;" alt="listing image">
            <div class="card-body">
                <p class="card-text fw-bold">
                    <%=listing.title%>
                </p>
                <p class="card-text">
                    <%=listing.description%>
                </p>
                <p class="card-text">
                    &#8377; <%=listing.price.toLocaleString('en-IN') %>
                </p>
                <p class="card-text">
                    <%=listing.location%>
                </p>
                <p class="card-text">
                    <%=listing.country%>
                </p>
                <div class="btns">
                    <a href="/listings/<%=listing._id %>/edit" class="btn edit-btn col-3 ">Edit </a>
                    <form  method="POST" class="col-3" action="/listings/<%=listing._id%>?_method=Delete">
                        <button class="btn btn-dark  offset-1 ">Delete </button>
                    </form>
                </div>
            </div>
        </div>
    </div>